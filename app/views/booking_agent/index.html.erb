<h1>BookingAgent Homepage</h1>
<p>Find me in app/views/booking_agent/index.html.erb</p>

<p>This is the info you need to know as admin</p>

 <div id="container" style="width:100%; height:400px;"></div>

<script type="text/javascript">
document.addEventListener('DOMContentLoaded',function(){
    var myChart = Highcharts.chart('container', {
        chart: {
            type: 'bar'
        },
        title: {
            text: 'Bookings'
        },
        xAxis: {
            categories: <%= raw @journey_names %>
        },
        yAxis: {
            title: {
                text: 'Cabins Booked'
              }, 
              tickInterval: 1            
          },
        series: [{
            name: 'Cabins Available',
            data: <%= raw @cabins_available %>
        },
        {
            name: 'Cabins Booked',
            data: <%= raw @bookings %>
        },]
    });
});
</script>