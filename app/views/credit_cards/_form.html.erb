<%= form_with(model: credit_card) do |form| %>
  <% if credit_card.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(credit_card.errors.count, "error") %> prohibited this credit_card from being saved:</h2>

      <ul>
        <% credit_card.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :number %>
    <%= form.text_field :number %>
  </div>

  <div class="field">
    <%= form.label :exp_date %>
    <%= select_date Date.today, prefix: :exp_date %>"Pick the date"
  </div>

  <div class="field">
    <%= form.label :name_on_card %>
    <%= form.text_field :name_on_card %>
  </div>

  <div class="field">
    <%= form.label :company %>
    <%= form.select :company, CreditCard.companies.keys, prompt: 'Select a payment type' %>
  </div>

  <div class="field">
    <%= form.label :customer_id %>
    <%#= form.collection_select(:customer_id, @customers, :id, :last_name) %>
    <%= form.text_field :customer_id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
